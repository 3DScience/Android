<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/mToolBox"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00A261"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnShowSearch"
        android:layout_gravity="center_vertical|right"
        android:src="@drawable/ic_search_white_24dp"
        android:tint="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <android.support.v7.widget.SearchView
        android:id="@+id/mSearchExamResults"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_search_student_exam"
        android:visibility="gone" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imageView16"
        android:layout_toEndOf="@+id/imageView16"
        android:id="@+id/btnMarkScoreAll"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView16"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/ic_input_white_24dp"
            android:layout_gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btnSelectedDate"
            android:id="@+id/textView5"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="32dp"
            android:textColor="#fff" />
    </LinearLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/view_button_submit_cancel_input_exam_results"
        android:layout_centerInParent="true"
        android:visibility="gone"/>


</RelativeLayout>
