<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <!--<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:tag="@string/title_screen_create_message">-->

        <!-- TODO: Update blank fragment layout -->

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#ffffff"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:id="@+id/btnStudentPicker">

                <TextView
                    android:id="@+id/txvTo"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="To" />

                <TextView
                    android:id="@+id/txtConversionMessageTo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:text="Class 1A1"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/txvTo"
                    android:layout_toEndOf="@+id/txvTo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="50dp"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:maxLines="1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageView14"
                    android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                    android:layout_marginRight="14dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="14dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="#eeeeee"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/txtMessageTitleStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:hint="@string/hint_message_subject"
                    android:imeOptions="actionNext"
                    android:inputType="text"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="#eeeeee"></LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#ffffff"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:id="@+id/btnSmsCheck">

                <TextView
                    android:id="@+id/txvSMS"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="SMS" />

                <CheckBox
                    android:id="@+id/cbSendSms"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/txvSMS"
                    android:layout_toEndOf="@+id/txvSMS" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="#eeeeee"></LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#ffffff"
                android:paddingBottom="5dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="5dp"
                android:id="@+id/btnImportantCheck">

                <TextView
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="Important"
                    android:id="@+id/txvImportant" />

                <CheckBox
                    android:id="@+id/cbImportant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/txvImportant"
                    android:layout_toEndOf="@+id/txvImportant"
                    android:layout_marginLeft="15dp"
                    android:layout_marginStart="15dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="horizontal"
                android:background="#eeeeee" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="#ffffff"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/txtMessageContent"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:isScrollContainer="true"
                    android:layout_gravity="center_horizontal"
                    android:background="@android:color/transparent"
                    android:gravity="left|top"
                    android:hint="@string/hint_message_content"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:paddingBottom="12dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="12dp"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>

    <!--</FrameLayout>-->
</ScrollView>