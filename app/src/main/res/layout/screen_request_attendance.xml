<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@color/fragmentBackground"
    android:id="@+id/container">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#EEEEEE"
        android:id="@+id/txbDatePicker">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView11"
            android:src="@drawable/ic_event_available_black_24dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Attendance Date"
            android:id="@+id/txvAttDt"
            android:layout_alignBottom="@+id/imageView11"
            android:layout_toRightOf="@+id/imageView11"
            android:layout_toEndOf="@+id/imageView11"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:layout_marginRight="60dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:layout_marginRight="6dp"
            android:id="@+id/btnOption">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/imgOption" />
        </LinearLayout>

    </RelativeLayout>

    <!--<EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/txbDatePicker"
        android:layout_gravity="center_horizontal"
        android:focusable="false"
        android:background="#EEEEEE"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:drawablePadding="10dp"
        android:text="10 - 5 - 2016"
        android:drawableRight="@drawable/ic_keyboard_arrow_down_black_24dp"/>-->

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/txbReason"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:hint="Lý do xin nghỉ..."
        android:padding="15dp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:singleLine="false"/>

</LinearLayout>