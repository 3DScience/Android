<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:orientation="vertical"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/txbTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:layout_alignLeft="@+id/txbSender"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/txbSender"
            android:layout_toStartOf="@+id/txtDateSend"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@+id/txtDateSend" />

        <TextView
            android:id="@+id/txbSender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txbContent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="56dp"
            android:layout_toStartOf="@+id/txtDateSend"
            android:text="Sender"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:layout_toLeftOf="@+id/txtDateSend" />

        <TextView
            android:id="@+id/txbContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/txbTitle"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txbTitle"
            android:layout_below="@+id/txbTitle"
            android:layout_marginLeft="56dp"
            android:singleLine="true"
            android:text="Content"
            android:textColor="@color/colorDefault"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/txtDateSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="16dp"
            android:singleLine="true"
            android:text="Date"
            android:textColor="#2962FF"
            android:textSize="12sp" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imgUserAvata"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/imgFlagMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgStar"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_star_border_white_24dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"/>
</LinearLayout>