<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragmentBackground"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:id="@+id/formHeader"
        android:visibility="visible"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgClass"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_book_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Class Name"
                android:id="@+id/txtClassName"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgClass"
                android:layout_toEndOf="@+id/imgClass"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:id="@+id/btnAttendanceDate">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgAttDt"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_event_available_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Attendance-Date"
                android:id="@+id/txtAttendanceDate"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgAttDt"
                android:layout_toEndOf="@+id/imgAttDt"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgDropdown1"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="15dp"
            android:paddingTop="5dp"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:id="@+id/btnSession">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgSession"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_library_books_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Chose Subject"
                android:id="@+id/txtSession"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgSession"
                android:layout_toEndOf="@+id/imgSession"
                android:layout_marginLeft="15dp"
                android:textSize="14sp"
                android:textColor="#000000"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgDropdown2"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_keyboard_arrow_down_black_24dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#eeeeee"
        android:id="@+id/btnScrolldown"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Class"
            android:id="@+id/txtClassN"
            android:textSize="14dp"
            android:visibility="visible"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="15dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView16"
            android:src="@drawable/ic_arrow_drop_down_black_24dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Subject"
            android:id="@+id/txtSubjectN"
            android:textSize="14dp"
            android:visibility="visible"
            android:layout_alignTop="@+id/txtClassN"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="15dp" />
    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:background="@color/text_title_tab_indicator"
        android:layout_height="1dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/cardview_shadow_start_color"
        android:paddingLeft="15dp"
        android:paddingTop="0dp"
        android:paddingRight="10dp"
        android:paddingBottom="0dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="List students"
            android:id="@+id/textView41"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="14dp"
            android:textColor="#ffffff" />

        <com.laoschool.screen.widgets.MyEditText
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:id="@+id/edtSearch"
            android:drawableRight="@drawable/ic_search_black_24dp"
            android:drawablePadding="5dp"
            android:background="@drawable/search_shape"
            android:paddingLeft="8dp"
            android:paddingRight="7dp"
            android:textSize="15dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textCursorDrawable="@null"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/text_title_tab_indicator"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icDH"
            android:layout_toStartOf="@+id/icDH"
            android:layout_marginRight="10dp"
            android:visibility="gone"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="KP"
            android:id="@+id/icKP"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="0dp"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="CP"
            android:id="@+id/icCP"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/icKP"
            android:layout_toStartOf="@+id/icKP"
            android:layout_marginRight="25dp"
            android:textSize="14dp"
            android:visibility="gone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="DH"
            android:id="@+id/icDH"
            android:layout_alignTop="@+id/icCP"
            android:layout_toLeftOf="@+id/icCP"
            android:layout_toStartOf="@+id/icCP"
            android:layout_marginRight="24dp"
            android:textSize="14dp"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/text_title_tab_indicator"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/icKP"
            android:layout_toStartOf="@+id/icKP"
            android:layout_marginRight="9dp"
            android:id="@+id/linearLayout6"
            android:visibility="gone" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="@color/text_title_tab_indicator"
            android:layout_toLeftOf="@+id/icCP"
            android:layout_toStartOf="@+id/icCP"
            android:layout_alignTop="@+id/linearLayout6"
            android:layout_marginRight="12dp"
            android:visibility="gone" />

    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:background="@color/text_title_tab_indicator"
        android:layout_height="1dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/tableStudentView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/fragmentBackground"
        android:layout_marginBottom="0dp">
    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-41dp"
        android:background="@color/colorLaosRed"
        android:id="@+id/btnStartAttendance"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Start Attendance!"
            android:id="@+id/textView45"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="15dp" />
    </RelativeLayout>

    <View android:layout_width="match_parent"
        android:background="@color/text_title_tab_indicator"
        android:layout_height="1dp" />

</LinearLayout>