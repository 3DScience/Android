<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/mDataInfomation"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:layout_gravity="center_vertical"
    android:background="#00A261"
    android:paddingRight="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_class_white_24dp"
        android:tint="#fff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp"
        android:layout_toLeftOf="@+id/btnShowFilter"
        android:layout_toStartOf="@+id/btnShowFilter"
        android:orientation="vertical">

        <TextView
            android:id="@+id/lbClassName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/lbSubject"
            android:layout_alignStart="@+id/lbSubject"
            android:layout_alignTop="@+id/imageView"
            android:text="Class name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lbClassName"
            android:layout_toEndOf="@+id/imageView"
            android:layout_toRightOf="@+id/imageView"
            android:text="Subject:Math"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnShowFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical|right"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_keyboard_arrow_down_white_24dp" />

</RelativeLayout>