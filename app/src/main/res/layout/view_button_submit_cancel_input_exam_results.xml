<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mActionSubmitCancel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00A261"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/lbInputSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:text="Input exam results for:January"
        android:textColor="#fff"
        android:textSize="20sp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btnCancelInputExamResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btnMarkScoreAll"
            android:layout_toRightOf="@+id/btnMarkScoreAll"
            android:background="@drawable/bg_button_cancel_input_exam_results"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/action_cancel"
            android:textColor="#000" />

        <TextView
            android:id="@+id/btnSubmitInputExamResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/btnMarkScoreAll"
            android:layout_toRightOf="@+id/btnMarkScoreAll"
            android:background="@drawable/bg_button_submit_input_exam_results"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/action_submit"
            android:textColor="#fff" />
    </LinearLayout>
</LinearLayout>