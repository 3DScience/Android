<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mActionSubmitCancel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00A261"
    android:orientation="vertical"
    android:paddingBottom="8dp"
    android:paddingTop="8dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView19"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_timer_black_24dp"
        android:tint="#ffffff"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/lbInputSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="January"
        android:textColor="#fff"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/linearLayout8"
        android:layout_toStartOf="@+id/linearLayout8"
        android:layout_marginLeft="56dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|right"
        android:orientation="horizontal"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:id="@+id/linearLayout8"
        android:layout_centerVertical="true"
        android:layout_marginLeft="16dp">

        <TextView
            android:id="@+id/btnCancelInputExamResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/btnMarkScoreAll"
            android:layout_toRightOf="@+id/btnMarkScoreAll"
            android:background="@drawable/bg_button_cancel_input_exam_results"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/SCCommon_Cancel"
            android:textColor="#000" />

        <TextView
            android:id="@+id/btnSubmitInputExamResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toEndOf="@+id/btnMarkScoreAll"
            android:layout_toRightOf="@+id/btnMarkScoreAll"
            android:background="@drawable/bg_button_submit_input_exam_results"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:text="@string/SCCommon_Submit"
            android:textColor="#fff" />
    </LinearLayout>
</RelativeLayout>