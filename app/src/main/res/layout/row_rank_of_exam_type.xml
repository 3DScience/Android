<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/txtExamTypeName"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:maxLines="3"
                android:lines="3"
                android:text="Math Ban jdlkasdkl djaklsdjklsa"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"

                android:gravity="center"
                android:layout_marginBottom="5dp" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="54dp"
            android:layout_alignParentEnd="false"
            android:layout_toRightOf="@+id/relativeLayout2"
            android:background="@color/color_divider"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="false"
            android:layout_toEndOf="@+id/relativeLayout2"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:text="@string/SCExanResults_Average" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SCExanResults_Grade"
                    android:id="@+id/textView21" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/SCExanResults_Rank"
                    android:id="@+id/textView22" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbAve"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:layout_gravity="left"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/lbGrade"
                    android:layout_toStartOf="@+id/lbGrade" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbGrade"
                    android:gravity="center_vertical"
                    android:paddingRight="10dp"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/lbAllocation1"
                    android:layout_toStartOf="@+id/lbAllocation1"
                    android:layout_gravity="left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbAllocation1"
                    android:gravity="center_vertical"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingRight="16dp"
                    android:layout_gravity="left" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_divider"></LinearLayout>
</LinearLayout>