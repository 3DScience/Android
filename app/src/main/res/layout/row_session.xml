<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">


        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout3"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp">

            <TextView
                android:id="@+id/lbSessionName"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Session"
                android:textColor="#000"
                android:textSize="12sp"
                android:lines="2"
                android:maxLines="2"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:textStyle="bold"
                android:gravity="fill_vertical" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="7h-8h"
                android:id="@+id/lbSessionDuration"
                android:layout_below="@+id/lbSessionName"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:textSize="10sp"
                android:singleLine="false"
                android:layout_alignRight="@+id/lbSessionName"
                android:layout_alignEnd="@+id/lbSessionName"
                android:gravity="fill" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/relativeLayout3"
            android:layout_toEndOf="@+id/relativeLayout3"
            android:background="#000"></LinearLayout>

        <TextView
            android:id="@+id/lbSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Subject"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/relativeLayout3"
            android:layout_toEndOf="@+id/relativeLayout3"
            android:layout_marginLeft="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lbTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/lbSubjectName"
            android:layout_alignStart="@+id/lbSubjectName"
            android:layout_below="@+id/lbSubjectName"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="TeacherName"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Description"
            android:id="@+id/lbSessionDesciption"
            android:layout_below="@+id/lbTeacherName"
            android:layout_alignLeft="@+id/lbTeacherName"
            android:layout_alignStart="@+id/lbTeacherName"
            android:textSize="14sp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"></LinearLayout>
</LinearLayout>