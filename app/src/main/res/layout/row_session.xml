<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:background="#ffffff"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">


        <TextView
            android:id="@+id/textView21"
            android:layout_width="20dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:background="@color/colorAccent" />

        <TextView
            android:id="@+id/lbSubjectName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/textView21"
            android:layout_toRightOf="@+id/textView21"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Subject"
            android:textColor="@color/colorAccent"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/lbSessionName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_above="@+id/lbSubjectName"
            android:layout_alignLeft="@+id/lbSubjectName"
            android:layout_alignStart="@+id/lbSubjectName"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Session"
            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lbTeacherName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignLeft="@+id/lbSubjectName"
            android:layout_alignStart="@+id/lbSubjectName"
            android:layout_below="@+id/lbSubjectName"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="TeacherName"
            android:textSize="14sp"
            android:textColor="#000" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"></LinearLayout>
</LinearLayout>